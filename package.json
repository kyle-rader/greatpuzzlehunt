{
  "name": "greatpuzzlehunt",
  "private": true,
  "version": "0.1.0",
  "main": "src/server",
  "app": {
    "backendBuildDir": "build/server",
    "frontendBuildDir": "build/client",
    "webpackDevPort": 3000,
    "apiPort": 3001
  },
  "engines": {
    "node": "6.6.0",
    "npm": "3.10.3"
  },
  "scripts": {
    "build": "babel-node tools/webpack.run build",
    "clean": "rm -rf $npm_package_app_frontendBuildDir $npm_package_app_backendBuildDir",
    "start": "if [ \"$NODE_ENV\" = production ]; then node --harmony $npm_package_app_backendBuildDir; else babel-node tools/webpack.run watch; fi",
    "test": "mocha-webpack --webpack-config tools/webpack.config.js --full-trace --exit 'src/**/*.test.js' && npm run lint",
    "lint": "eslint --fix --ext js --ext jsx src",
    "seed": "knex seed:run",
    "migrate": "knex migrate:latest",
    "postinstall": "if [ \"$NODE_ENV\" = production ]; then npm run clean && npm run build && npm run migrate && npm run seed; fi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kyle-rader/greatpuzzlehunt"
  },
  "bugs": {
    "url": "https://github.com/kyle-rader/greatpuzzlehunt/issues"
  },
  "homepage": "https://greatpuzzlehunt.com",
  "keywords": [
    "puzzle hunt",
    "apollo",
    "fullstack",
    "graphql",
    "react"
  ],
  "author": "Great Puzzle Hunt",
  "license": "MIT",
  "dependencies": {
    "aphrodite": "^0.6.0",
    "apollo-client": "^0.4.19",
    "apollo-server": "^0.3.2",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "express": "^4.14.0",
    "graphql": "^0.7.0",
    "graphql-subscriptions": "^0.2.0",
    "graphql-tag": "^0.1.14",
    "graphql-tools": "^0.7.2",
    "graphql-typings": "0.0.1-beta-2",
    "isomorphic-fetch": "^2.2.1",
    "knex": "^0.12.1",
    "minilog": "^3.0.1",
    "pg": "^6.1.0",
    "pg-hstore": "^2.3.2",
    "react": "^15.3.2",
    "react-addons-update": "^15.3.2",
    "react-apollo": "^0.5.8",
    "react-bootstrap": "^0.30.3",
    "react-dom": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.5",
    "react-router": "^2.8.1",
    "source-map-support": "^0.4.2",
    "sqlite3": "^3.1.4",
    "subscriptions-transport-ws": "^0.2.3",
    "webpack": "^1.13.2",
    "webpack-manifest-plugin": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.14.0",
    "bootstrap-sass": "^3.3.7",
    "chai": "^3.5.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.6.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "graphql": "^0.7.0",
    "ignore-loader": "^0.1.1",
    "isomorphic-style-loader": "^1.0.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.1.0",
    "mocha-webpack": "^0.7.0",
    "node-sass": "^3.10.0",
    "raw-loader": "^0.5.1",
    "resolve-url-loader": "^1.6.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "wait-for-port": "0.0.2",
    "webpack-dev-server": "^1.16.1",
    "webpack-merge": "^0.14.1",
    "webpack-node-externals": "^1.4.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./tools/webpack.config.js"
        }
      }
    },
    "env": {
      "mocha": true
    },
    "globals": {
      "window": true,
      "document": true,
      "__DEV__": true,
      "__CLIENT__": true,
      "__SERVER__": true
    },
    "plugins": [
      "react"
    ]
  }
}
